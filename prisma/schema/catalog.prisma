model CatalogItem {
    id           Int            @id @default(autoincrement())
    name         String         @unique
    description  String
    price        Float
    imageUrl     String
    category     String
    releaseDate  DateTime
    priceHistory PriceHistory[]

    @@index([category])
}

model PriceHistory {
    id     Int         @id @default(autoincrement())
    date   DateTime
    price  Float
    itemId Int
    item   CatalogItem @relation(fields: [itemId], references: [id])

    @@index([itemId, date])
}
